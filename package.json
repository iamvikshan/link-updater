{
  "name": "links-updater",
  "private": true,
  "description": "Automatically updates repository links/keywords and optionally creates PRs",
  "version": "1.2.7",
  "main": "src/index.ts",
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "f": "prettier --write \"**/*.*\"",
    "s": "bun src/index.ts",
    "build": "rimraf dist && ncc build src/index.ts -o dist",
    "check": "tsc --noEmit && eslint . --ext .ts",
    "prepare": "husky"
  },
  "keywords": [
    "github",
    "actions",
    "links",
    "automation"
  ],
  "author": "vikshan",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/exec": "^3.0.0",
    "@actions/github": "^9.0.0",
    "js-yaml": "^4.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.5",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vercel/ncc": "^0.38.4",
    "axios": "^1.13.5",
    "bun-types": "^1.3.9",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "conventional-changelog-gitmoji": "^0.2.5",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "semantic-release": "^25.0.3",
    "semantic-release-gitmoji": "^1.6.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  }
}
