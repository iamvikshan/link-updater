{
  "name": "links-updater",
  "description": "Automatically updates repository links/keywords and optionally creates PRs",
  "version": "1.2.3",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "main": "src/index.ts",
  "scripts": {
    "build": "bun scripts/sync-action-deps.ts && bun f && echo 'âœ… Source-only action ready - no bundling needed'",
    "lint": "eslint src/**/*.ts",
    "f": "prettier --write \"**/*.*\"",
    "prepare": "husky",
    "s": "bun src/index.ts",
    "sync-deps": "bun scripts/sync-action-deps.ts"
  },
  "keywords": [
    "github",
    "actions",
    "links",
    "automation"
  ],
  "author": "vikshan",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.0",
    "@semantic-release/npm": "^13.1.1",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vercel/ncc": "^0.38.4",
    "axios": "^1.12.2",
    "bun-types": "^1.3.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "conventional-changelog-gitmoji": "^0.2.5",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "semantic-release": "^25.0.1",
    "semantic-release-gitmoji": "^1.6.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-require-imports": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "error"
    }
  }
}
